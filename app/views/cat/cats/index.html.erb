<h1>Listing cats</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cats.each do |cat| %>
  <tr>
    <td><%= cat.name %></td>
    <td><%= format_pet_type(cat.type) %></td>
    <td><%= link_to 'Show', cat %></td>
    <td><%= link_to 'Edit', edit_cat_cat_path(cat) %></td>
    <td><%= link_to 'Destroy', cat, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

